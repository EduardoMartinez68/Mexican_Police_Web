<!DOCTYPE html>
<html lang="en">

<head>
    <link href="/css/from/fromNewUser.css" rel="stylesheet" media="all">
</head>

<body>
    <div class="page-wrapper bg-gra-03 p-t-45 p-b-50">
        <div class="wrapper wrapper--w790">
            <div class="card card-5">
                <div class="card-heading">
                    <h2 class="title">Editar un usuario</h2>
                </div>
                <div class="card-body">
                    {{#each user}}
                        <form method="POST" action="/Mexico/{{ID_usuario}}/edit-user">
                            <div class="form-row m-b-55">
                                <div class="name">Nombre</div>
                                <div class="value">
                                    <div class="row row-space">
                                        <div class="col-2">
                                            <div class="input-group-desc">
                                                <input class="input--style-5" type="text" name="first_name" autofocus required value="{{nombre}}"> 
                                                <label class="label--desc">Primer nombre</label>
                                            </div>
                                        </div>
                                        <div class="col-2">
                                            <div class="input-group-desc">
                                                <input class="input--style-5" type="text" name="second_name" value="{{second_name}}">
                                                <label class="label--desc">Segundo nombre</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-row m-b-55">
                                <div class="name">Apellidos</div>
                                <div class="value">
                                    <div class="row row-space">
                                        <div class="col-2">
                                            <div class="input-group-desc">
                                                <input class="input--style-5" type="text" name="last_name_f" required value="{{last_name_father}}">
                                                <label class="label--desc">Apellido paterno</label>
                                            </div>
                                        </div>
                                        <div class="col-2">
                                            <div class="input-group-desc">
                                                <input class="input--style-5" type="text" name="last_name_m" required value="{{last_name_mother}}">
                                                <label class="label--desc">Apellido materno</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <hr>
                            <div class="form-row">
                                <div class="name">Usuario</div>
                                <div class="value">
                                    <div class="input-group-desc">
                                        <input class="input--style-5" type="text" name="user" required value="{{username}}">
                                        <label class="label--desc">Nombre de usuario</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="name">Email</div>
                                <div class="value">
                                    <div class="input-group">
                                        <input class="input--style-5" type="email" name="email" required value="{{correo}}">
                                    </div>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="name">Nivel</div>
                                <div class="value">
                                    <div class="input-group">
                                        <div class="rs-select2 js-select-simple select--no-search">
                                            <select name="level" class="form-control" id="{{ID_nivel}}">
                                                <option value="1">1</option>
                                                <option value="2">2</option>
                                                <option value="3">3</option>
                                            </select>
                                            <div class="select-dropdown"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div>
                                <button class="btn-from btn--radius-2 btn--w" type="submit">Actualizar</button>
                            </div>
                        </form>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
        <script>
            const select = document.querySelector('select');
            const selectedOption = select.querySelector(`option[value="${select.id}"]`);
            if (selectedOption) {
                selectedOption.selected = true;
            }
        </script>
</body>
</html>