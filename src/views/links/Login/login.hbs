<link rel="stylesheet" href="/css/login.css">

<section class="body-session">
    <div class="container p-4">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <form action="/Mexico/login" method="POST">
                            <center>
                                <h1 class="title-session">Login<i class="fi-icon fi-sr-user"></i></h1>
                            </center>
                            <br>
                            <div class="form-group">
                                <label>
                                    <i class="fi-session fi-rr-user">User or E-mail *</i>
                                    <input type="text" id="userName" name="userName" placeholder="User or E-mail"
                                        class="form-control" autofocus>
                                </label>
                            </div>

                            <div class="form-group">
                                <label>
                                    <i class="fi-session fi-rr-lock">Passwoard *</i>
                                    <input type="password" id="password" name="password" placeholder="password"
                                        class="form-control">
                                </label>
                            </div><br>
                            <button class="btn btn-success btn-block">Login</button>
                            <br><br>
                            <center><a class="link-session" href="singup">Forgot your password?</a></center>
                            <br><br><br>
                            <label class="link-session">Don't have an account?</label><a class="link-singUp"
                                href="/fud/signup">Sing Up</a>
                            <br><br>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>